<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0.5dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/airPlane"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_airplanemode_active_black_24dp"

        />


    <ImageView
        android:id="@+id/car"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_airport_shuttle_black_24dp" />

    <TextView
        android:id="@+id/planeText"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/airPlane"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="26dp"
        android:text="@string/airPlanePoem" />


    <TextView
        android:id="@+id/carText"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car"
        android:layout_marginLeft="39sp"
        android:layout_marginTop="14sp"
        android:layout_marginRight="20sp"
        android:layout_toRightOf="@+id/planeText"
        android:text="@string/carPoem" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/carText"
        android:layout_marginTop="30dp"
        android:text="Далее"/>



</RelativeLayout>